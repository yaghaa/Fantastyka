@using System.Text
@model Fantastyka.Models.SurveyModel


@{
    ViewBag.Title = "Contact";
    @Styles.Render("~/Content/ankieta.css")
    @Styles.Render("~/Content/pageSchema.css")
}

<body>
<div id="conteiner">
    <div id="header">
        <h1>Ulubiona książka</h1>
    </div>

    <div class="article">

        <h2>Pochwal się swoją ulubioną książką. </h2>
        <h3>Dodaj książkę</h3>

        @using (Html.BeginForm("Survey", "Survey"))
        {
            <div class="form-group">
                @Html.Label("Imię", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Name)

                </div>
            </div>

            <div class="form-group">
                @Html.Label("E-Mail", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email)

                </div>
            </div>

            <div class="form-group">
                @Html.Label("Potwierdz E-Mail", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.ConfirmEmail, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ConfirmEmail)

                </div>
            </div>

            <div class="form-group">
                @Html.Label("Autor", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Author, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Author)

                </div>
            </div>

            <div class="form-group">
                @Html.Label("Tytuł książki", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Title)

                </div>
            </div>

            <div class="form-group">
                @Html.Label("Wydawca", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Publisher, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Publisher)

                </div>
            </div>

            
            <label class="fixed" for="ocenaK">
                <strong>Jak oceniasz książkę: </strong>
            </label>
            @Html.Label("1.0", "1.0")
            @Html.RadioButtonFor(x => x.Rating, 1.0)
            @Html.Label("2.0", "2.0")
            @Html.RadioButtonFor(x => x.Rating, 2.0)
            @Html.Label("3.0", "3.0")
            @Html.RadioButtonFor(x => x.Rating, 3.0)
            @Html.Label("4.0", "4.0")
            @Html.RadioButtonFor(x => x.Rating, 4.0)
            @Html.Label("5.0", "5.0")
            @Html.RadioButtonFor(x => x.Rating, 5.0)
            @Html.ValidationMessageFor(x => x.Rating, "", new { @style = "color:red" })

            <p>
                <label>
                    <strong>Czy przeczytałeś/aś tą książkę?</strong>
                </label>
            </p>
            @Html.EnumDropDownListFor(x => x.Readed)
            @Html.ValidationMessageFor(x => x.Readed , "", new { @style = "color:red" })

            <div class="form-group">
                @Html.Label("Ile przeczytań", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.TimesReaded, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.TimesReaded)

                </div>
            </div>

            @*<div class="form-group">
                @Html.Label("Data zakupu", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.PurchaseDate, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.PurchaseDate)

                </div>
            </div>

            <div class="form-group">
                @Html.Label("Data przeczytania", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.ReadedDate, new { @class = "form-control", id = "datetimepicker4" })
                    @Html.ValidationMessageFor(m => m.ReadedDate)

                </div>
            </div>*@
            

            <p>
                <input id="submit" type="submit" value="Wyślij" action="POST">
                <input id="reset" type="button" value="Wyczyść formularz" onclick="location.href='@Url.Action("Survey", "Survey")'" />
    
            </p>
            @Html.HiddenFor(x=> x.Hidden)
            if (!Model.Hidden)
            {
                
                <div>
                    @Html.ValueFor(x=> x.Result)
                </div>
            }
        }
               


        <p id="pomoc"></p>
        <p>
            <meter value="1" min="0" max="3"></meter>Ankieta 1/3
        </p>
        <p id="demo"></p>

    </div>
</div>
</body>
