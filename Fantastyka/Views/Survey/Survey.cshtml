@{
    ViewBag.Title = "Contact";
    @Styles.Render("~/Content/ankieta.css")
    @Styles.Render("~/Content/pageSchema.css")
}

<body>
    <div id="conteiner">
        <div id="header">
            <h1>Ulubiona książka</h1>
        </div>

        <div class="article">

            <h2>Pochwal się swoją ulubioną książką.	</h2>
            <p>Dodaj książkę.</p>

            <form id="myForm" method="POST" autocomplete="on">
                <p>
                    <label class="fixed" for="imie">Imię: </label><input type="text" name="imie" placeholder="Imie" size="25" />

                    <label class="fixed" for="email">Email: </label><input type="email" name="email" placeholder="nazwa@domena.pl" size="40" />

                    <br>
                    <h3>Dodaj książkę</h3>

                <p><label class="fixed" for="autor">Autor: </label><input type="text" name="autor" placeholder="Imie i nazwisko autora" size="30"></p>

                <p><label for="tytulKsiazki">Tytuł książki: <br></label><textarea id="tytulKsiazki" name="tytulKsiazki" placeholder="Wpisz tytuł ksiązki" maxlength="200"></textarea></p>

                <p><label class="fixed" for="wydawca">Wydawca: </label><input type="text" name="wydawca" placeholder="Wpisz wydawce" size="20"></p>


                <label class="fixed" for="ocenaK"><strong>Jak oceniasz książkę: </strong></label>
                <label for="ocenaK">5.0:</label><input id="ocenaK" type="radio" name="ocena" value="5.0" />
                <label>4.0:</label><input type="radio" name="ocena" value="4.0" />
                <label>3.0:</label><input type="radio" name="ocena" value="3.0" />
                <label>2.0:</label><input type="radio" name="ocena" value="2.0" />
                <label>1.0:</label><input type="radio" name="ocena" value="1.0" />

                <p><label><strong>Czy przeczytałeś/aś tą książkę?</strong></label></p>
                <select name="czyCzytales">
                    <option selected>Tak</option>
                    <option>Nie</option>
                </select>
                <p>
                    <label>
                        <strong>Ile razy przeczytałeś/aś tą książkę?</strong>
                        <input type="number" name="ileRazyPrzeczyt" min="0" max="20" step="1" value="1" />
                    </label>
                </p>



                <p>
                    <input id="submit" type="submit" value="Wyślij">
                    <input id="reset" type="reset" value="Wyczyść formularz">
                </p>
                </p>
            </form>


            <p id="pomoc"></p>
            <p><meter value="1" min="0" max="3"></meter>Ankieta 1/3</p>
            <p id="demo"></p>

        </div>
    </div>
</body>